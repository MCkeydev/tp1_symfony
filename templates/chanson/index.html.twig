{% extends 'base.html.twig' %}

{% block title %}Chanson index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des chansons</h1>
        <a class="btn btn-primary" href="{{ path('app_chanson_new') }}">Ajouter une chanson</a>
    </div>
    <table class="table ve">
        <thead>
            <tr>
                <th>Couverture</th>
                <th>Titre</th>
                <th>Date de sortie</th>
                <th>Genre</th>
                <th>Langue</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chanson in chansons %}
            <tr>
                <td class="align-middle">
                    <img src="{{ chanson.photoCouverture }}" alt="couverture" class="img-thumbnail rounded-circle" style="height: 64px; width: 64px;"/>
                </td>
                <td class="align-middle">{{ chanson.titre }}</td>
                <td class="align-middle">{{ chanson.dateSortie ? chanson.dateSortie|date('Y-m-d H:i:s') : '' }}</td>
                <td class="align-middle">{{ chanson.genre }}</td>
                <td class="align-middle">{{ chanson.langue }}</td>
                <td class="align-middle">{{ chanson.id }}</td>
                <td class="align-middle">
                    <a class="btn btn-primary" href="{{ path('app_chanson_show', {'id': chanson.id}) }}">Détails</a>
                    <a class="btn btn-primary" href="{{ path('app_chanson_edit', {'id': chanson.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune chanson trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
