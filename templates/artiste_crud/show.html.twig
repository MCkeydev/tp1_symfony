{% extends 'base.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block body %}
    <h1>Détails de l'artiste</h1>
    <div class="py-2"></div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artiste.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ artiste.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ artiste.prenom }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ artiste.dateNaissance ? artiste.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu de naissance</th>
                <td>{{ artiste.lieuNaissance }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                    <img src="{{ artiste.photo }}" alt="couverture" class="img-thumbnail"/>
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artiste.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ artiste.type.name }}</td>
            </tr>
        </tbody>
    </table>
    <div class="py-2"></div>
    <h1>Chansons de l'artiste</h1>
    <div class="py-2"></div>
    <table class="table">
        <tbody>
            {% for chanson in artiste.chansons %}
                <tr>
                    <th scope="row">
                        <img src="{{ chanson.photoCouverture }}" alt="couverture" class="img-thumbnail rounded-circle" style="height: 40px; width: 40px;"/>
                    </th>
                    <td class="align-middle" colspan="2">{{ chanson.titre }}</td>
                    <td class="align-middle">{{ chanson.genre }}</td>
                    <td class="align-middle">{{ chanson.langue }}</td>
                    <td class="align-middle">
                        <a class="btn btn-primary" href="{{ path('app_chanson_show', { 'id': chanson.id }) }}">Détails</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
